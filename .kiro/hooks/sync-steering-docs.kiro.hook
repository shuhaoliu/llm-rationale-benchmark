{
  "enabled": true,
  "name": "Sync Steering Documents",
  "description": "Monitors changes to steering documents (python-standards.md, project-architecture.md, llm-integration.md, development-workflow.md) and updates AGENT.md to maintain consistency with all steering document content",
  "version": "1",
  "when": {
    "type": "fileEdited",
    "patterns": [
      "python-standards.md",
      "project-architecture.md",
      "llm-integration.md",
      "development-workflow.md"
    ]
  },
  "then": {
    "type": "askAgent",
    "prompt": "One or more steering documents have been modified. Please review the changes and update the AGENT.md file in the root directory to reflect all the content from the steering documents. Ensure that AGENT.md consolidates all necessary information from python-standards.md, project-architecture.md, llm-integration.md, and development-workflow.md to maintain consistency and completeness."
  }
}